{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitAny": false,
    "lib": [
      "es2015",
      "es2020",
      "dom"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}